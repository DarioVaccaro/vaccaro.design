#Removes www. subdomain from the address of the website
RewriteEngine On
RewriteCond %{HTTP_HOST} ^www.vaccaro.design$ [NC]
RewriteRule ^(.*)$ http://vaccaro.design/$1 [R=301,L]

#Restricts access to all files hosted on the website
RewriteCond %{HTTP_REFERER} !^http://(www\.)?vaccaro\.design [NC]
RewriteCond %{HTTP_REFERER} !^http://(www\.)?vaccaro\.design.*$ [NC]
RewriteRule \.(gif|jpg|js|txt|css|ttf|otf)$ /getoutofmyfiles [L]

RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1 [NC,L,R]

RewriteRule ^(.*)index\.(php|html?)$ /$1 [R=301,NC,L]

RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^ %{REQUEST_URI}.html [NC,L]
